                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/corner_5_white_fill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_card">

                <RelativeLayout
                    android:id="@+id/card_image_item_1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/item_image_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mastercard_2" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/edit_card_layout_1"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/exit_1"
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/corner_15_blue_1_fill"
                        android:paddingVertical="28dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/path" />

